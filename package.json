{
  "name": "supafaya-ticketing",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo run dev --scope=\"@supafaya-ticketing/web\"",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "web": "yarn workspace @supafaya-ticketing/web",
    "api": "yarn workspace @supafaya-ticketing/api"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.3.3",
    "typescript": "5.5.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
